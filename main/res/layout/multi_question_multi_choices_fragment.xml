<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MH1Activity"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtcauhoi"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Frament"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            >

            <CheckBox
                android:id="@+id/cbluachon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtlc1" />
            <CheckBox
                android:id="@+id/cbluachon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtlc2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            >

            <CheckBox
                android:id="@+id/cbluachon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtlc3"
                />
            <CheckBox
                android:id="@+id/cbluachon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtlc4"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>